<!DOCTYPE html>
<html>
<head>
    <title>Employee Filter</title>
    <style>
        body {
            font-family: Arial;
        }
        table {
            border-collapse: collapse;
            width: 70%;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: lightgray;
        }
    </style>
</head>
<body>

<h2>Employee Data</h2>

<select id="jobSelect">
    <option value="All">All Employees</option>
    <option value="Manager">Manager</option>
    <option value="Salesman">Salesman</option>
</select>

<button onclick="showEmployees()">Show Emps</button>

<div id="result"></div>

<script>

let employees = [
    {empno:101, name:"Ravi", job:"Manager", salary:50000},
    {empno:102, name:"Sita", job:"Salesman", salary:30000},
    {empno:103, name:"Amit", job:"Manager", salary:55000},
    {empno:104, name:"John", job:"Salesman", salary:28000}
];

function showEmployees()
{
    let selectedJob = document.getElementById("jobSelect").value;
    let output = "<table>";
    
    output += "<tr><th>Emp No</th><th>Name</th><th>Job</th><th>Salary</th></tr>";
    
    for(let emp of employees)
    {
        if(selectedJob === "All" || emp.job === selectedJob)
        {
            output += `<tr>
                        <td>${emp.empno}</td>
                        <td>${emp.name}</td>
                        <td>${emp.job}</td>
                        <td>${emp.salary}</td>
                       </tr>`;
        }
    }
    
    output += "</table>";
    
    document.getElementById("result").innerHTML = output;
}

</script>

</body>
</html>
