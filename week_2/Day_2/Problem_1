<!DOCTYPE html>
<html>
<head>
    <title>Student Marks Analyzer</title>
    <style>
        body { font-family: Arial; padding: 20px; }
        button { padding: 8px 15px; }
        #output { margin-top: 20px; font-size: 18px; }
    </style>
</head>
<body>

<h2>Student Marks Analyzer</h2>

<button onclick="analyzeMarks()">Analyze Marks</button>

<div id="output"></div>

<script>

const analyzeMarks = () => {

    const marks = [78, 85, 90, 66, 72];

    
    const formattedMarks = marks.map(mark => ` ${mark}`);

    const total = marks.reduce((sum, mark) => sum + mark, 0);

    const average = total / marks.length;

    const result = average >= 35 ? "PASS" : "FAIL";

    document.getElementById("output").innerHTML = `
        
        <strong>Total:</strong> ${total}<br/>
        <strong>Average:</strong> ${average.toFixed(2)}<br/>
        <strong>Result:</strong> ${result}
    `;
};

</script>

</body>
</html>
