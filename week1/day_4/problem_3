<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Discount Calculator</title>
</head>
<body>

    <h1>Simple Discount Calculator</h1>

    <p id="result"></p>

    <script>

        let amount = 4500;
        let discount = 0;

        if (amount >= 5000) {
            discount = amount * 0.20;
        }
        else if (amount >= 3000) {
            discount = amount * 0.10;
        }
        else {
            discount = 0;
        }

        let finalAmount = amount - discount;

        document.getElementById("result").innerHTML =
            "Purchase Amount: " + amount + "<br>" +
            "Discount Amount: " + discount + "<br>" +
            "Final Payable Amount: " + finalAmount;

    </script>

</body>
</html>
